<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#editForm");
        $('#inUse').addClass('hidden');
        order.addOrder("@Model.ORDERid");
        order.validate("@Model.ORDERid");
    });

    order.closeModal = function () {
			if (!order.recordInUse)
				order.removeHubOrder("@Model.ORDERid");
    };
</script>
